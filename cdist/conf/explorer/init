# Returns the process name of pid 1 ( normaly the init system )
# for example at linux this value is "init" or "systemd" in most cases
#

uname_s="$(uname -s)"

case "$uname_s" in
    Linux|FreeBSD)
        ps -o comm= -p 1 || true
    ;;
    *)
        # return a empty string as unknown value
        echo ""
    ;;
esac
