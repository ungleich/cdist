# Install required packages and set up config
#

locale="$(cat "$__object/parameter/locale")"
charset="$(cat "$__object/parameter/charset")"
os="$(cat "$__global/explorer/os")"

case "$os" in
    debian|ubuntu)
        # Debian needs a seperate package
        __package locales --state present
    ;;
    archlinux|suse)
        :
    ;;
    *)
        echo "Sorry, do not know how to handle os: $os" >&2
        echo "Please edit the type ${__type##*/} to fix this." >&2
        exit 1
    ;;
esac

__line /etc/locale.gen --line "$locale $charset" --state present
